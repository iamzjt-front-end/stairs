{
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "main": "index.js",
  "repository": "git@github.com:iamzjt-front-end/stairs.git",
  "author": "iamzjt-front-end <iamzjt@foxmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "vitest",
    "build": "rollup -c",
    "build -w": "rollup -c --watch",
    "commit": "git add . && ./node_modules/cz-customizable/standalone.js",
    "release": "release-it",
    "prepare": "npx only-allow pnpm && husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/config-lerna-scopes": "^17.6.3",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-strip": "^3.0.2",
    "@rollup/plugin-typescript": "^11.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "commitizen": "^4.3.0",
    "commitlint": "^17.6.5",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "inquirer": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "release-it": "^15.11.0",
    "rollup": "^3.25.1",
    "rollup-plugin-node-externals": "^6.1.1",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3",
    "unplugin-auto-import": "^0.16.4",
    "vitest": "^0.32.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/path/to/my/config.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --config .prettierrc --write",
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "cz-conventional-changelog": "^3.3.0"
  }
}
